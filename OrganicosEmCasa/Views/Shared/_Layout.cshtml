<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <!-- Fonts -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:400,700' rel='stylesheet' type='text/css'>
    <script src="~/Scripts/jquery.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Scripts/owl.carousel.min.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.nicescroll.js"></script>
    <script src="~/Scripts/jquery.scrollUp.min.js"></script>
    <script src="~/Scripts/main.js" type="text/javascript"></script>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <section id="top">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <p class="contact-action"><i class="fa fa-phone-square"></i>Em caso de dúvidas entre em contato pelo telefone <strong>(31) 3333-3333</strong></p>
                </div>
                <div class="col-md-3 clearfix">
                    <ul class="login-cart">
                        <li>
                            <a data-toggle="modal" data-target="#myModal" href="#">
                               
                            </a>
                        </li>
                        <li>
                            <div class="cart dropdown">
                                <a  href="~/Carrinho/Carrinho"><i class="fa fa-shopping-cart"></i>Carrinho</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div> <!-- End Of /.row -->
        </div>	<!-- End Of /.Container -->
        <!-- MODAL Start
            ================================================== -->
    </section>
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-4" >
                    <a href="/">
                        <img src="~/Content/images/logo.png" alt="logo">
                    </a>
                </div>	<!-- End of /.col-md-4 -->
                <div class="col-md-8">
                    <h2>A melhor loja on-line de produtos orgânicos do BRASIL</h2>
                </div>	<!-- End of /.col-md-8 -->
            </div>	<!-- End of /.row -->
        </div>	<!-- End of /.container -->
    </header> <!-- End of /Header -->

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <div class="block clearfix">
                            <a href="#">
                                <img src="~/Content/images/footer-logo.png" alt="">
                            </a>
                            <p>
                                Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s
                            </p>
                            <h4 class="connect-heading">NOSSAS REDES SOCIAIS</h4>
                            <ul class="social-icon">
                                <li>
                                    <a class="facebook-icon" href="#">
                                        <i class="fa fa-facebook"></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="plus-icon" href="#">
                                        <i class="fa fa-google-plus"></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="twitter-icon" href="#">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="pinterest-icon" href="#">
                                        <i class="fa fa-pinterest"></i>
                                    </a>
                                </li>
                                <li>
                                    <a class="linkedin-icon" href="#">
                                        <i class="fa fa-linkedin"></i>
                                    </a>
                                </li>
                            </ul>	<!-- End Of /.social-icon -->
                        </div>	<!-- End Of /.block -->
                    </div> <!-- End Of /.Col-md-4 -->
                    <div class="col-md-5">
                        <div class="block">
                            <h4>CONTATO</h4>
                            <p><i class="fa  fa-map-marker"></i> <span>Orgânicos Em Casa Ltda,</span>Rua das Flores, 32 - Belo Horizonte</p>
                            <p> <i class="fa  fa-phone"></i> <span>Telefone:</span> (31) 3333-3333 </p>
                            <p> <i class="fa  fa-mobile"></i> <span>Celula:</span> (31) 99999-9999</p>

                            <p class="mail"><i class="fa  fa-envelope"></i>Eamil: <span>contato@organicosemcasa.com.br</span></p>
                        </div>	<!-- End Of /.block -->
                    </div> <!-- End Of Col-md-3 -->

                </div> <!-- End Of /.row -->
            </div> <!-- End Of /.Container -->
            <!-- FOOTER-BOTTOM Start
            ================================================== -->
            <div class="footer-bottom">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">

                        </div>	<!-- End Of /.col-md-12 -->
                    </div>	<!-- End Of /.row -->
                </div>	<!-- End Of /.container -->
            </div>	<!-- End Of /.footer-bottom -->
        </footer> <!-- End Of Footer -->
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
