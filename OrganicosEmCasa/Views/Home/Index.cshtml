                    <div class="block">
                        <div class="block-heading">
                            <h2>NOSSAS CATEGORIAS</h2>
                        </div>
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-sm-6 col-md-6">
                                    <div class="thumbnail">
                                        <a class="catagotie-head" href="/Produtoes?Categoria=@Html.DisplayFor(modelItem => item.ID)">
