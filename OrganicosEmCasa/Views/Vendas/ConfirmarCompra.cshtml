@model IEnumerable<OrganicosEmCasa.Models.Venda>

@{
    ViewBag.Title = "Carrinho de Compras";
}
<section id="features">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block">
                    <div class="media">
                        <div class="media-body">
                            <center><h4 class="media-heading">Compra realizada com sucesso!!! Anote o número do seu pedido</h4></center>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End of /.col-md-12 -->
        </div>	<!-- End of /.row -->
    </div>	<!-- End of /.container -->
</section>
<div class="block">
<BR>
<div class="col-md-6">
    <table class="table">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Produto</th>
                <th scope="col">Quantidade</th>
                <th scope="col">Valor</th>
                <th scope="col">...</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var i in Model)
                {
                    foreach (var item in i.ListaProdutos)
                    {
                        <tr>
                            <td scope="col"><img src="~/Content/images/@Html.DisplayFor(modelItem => item.Produto.URLImagem)" alt="" style="width: 100px;"></td>
                            <td scope="col"> @Html.DisplayFor(modelItem => item.Produto.Nome)</td>
                            <td scope="col"> @Html.DisplayFor(modelItem => item.Quantidade)</td>
                            <td scope="col"> @Html.DisplayFor(modelItem => item.Produto.Preco)</td>
                            <td scope="col"> </td>
                        </tr>
                    }
                    
                }
            }
            else
            {
                <tr>
                    <td colspan="5"><center><h3>Venda não encontrada!</h3></center></td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="col-md-6">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Endereço</th>
                <th scope="col">Telfoene</th>
                <th scope="col">...</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {

                    foreach (var item in Model)
                    {
                        <tr>
                            <td scope="col"> @Html.DisplayFor(modelItem => item.Cliente.Nome)</td>
                            <td scope="col"> @Html.DisplayFor(modelItem => item.Cliente.Endereco)</td>
                            <td scope="col"> @Html.DisplayFor(modelItem => item.Cliente.Telefone)</td>
                            <td scope="col"> </td>
                        </tr>
                    }
            }
            else
            {
                <tr>
                    <td colspan="5"><center><h3>Cliente não encontrado!</h3></center></td>
                </tr>
            }
        </tbody>
    </table>
</div>